/**
 * FUNGSI UNGGAH FILE KE DRIVE
 */
function uploadToDrive(base64Data, fileName) {
  try {
    const folder = getDriveFolder();
    const contentType = base64Data.substring(5, base64Data.indexOf(';'));
    const bytes = Utilities.base64Decode(base64Data.split(',')[1]);
    const blob = Utilities.newBlob(bytes, contentType, fileName);
    const file = folder.createFile(blob);
    file.setSharing(DriveApp.Access.ANYONE_WITH_LINK, DriveApp.Permission.VIEW);
    
    // Return Format: Thumbnail Link size 800px (Lebih cepat load di HTML)
    return "https://drive.google.com/thumbnail?id=" + file.getId() + "&sz=w800";
    
  } catch (e) { return "Error: " + e.toString(); }
}

/**
 * Konversi Gambar Drive ke Base64 (Wajib untuk PDF & Cetak agar tidak blank)
 */
function getBase64ImageFromDrive(fileId) {
  try {
    var file = DriveApp.getFileById(fileId);
    var blob = file.getBlob();
    var base64Data = Utilities.base64Encode(blob.getBytes());
    var mimeType = blob.getContentType();
    return "data:" + mimeType + ";base64," + base64Data;
  } catch (e) {
    return ""; 
  }
}

/**
 * AUTH LOGIC
 */
function loginUser(email, password) {
  try {
    const data = getData('USERS');
    if (!data) return { success: false, message: 'Database USERS belum siap.' };
    
    // Pencarian User (Case Insensitive untuk Email)
    const user = data.find(u => 
      String(u.email).toLowerCase().trim() === String(email).toLowerCase().trim() && 
      String(u.password) === String(password)
    );
    
    if (user) return { success: true, user: user };
    return { success: false, message: 'Email atau Password salah!' };
  } catch (e) { return { success: false, message: e.toString() }; }
}

/**
 * CRUD HELPERS (Generic Functions)
 */
function getData(sheetName) {
  const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName(sheetName);
  if (!sheet) return [];
  const values = sheet.getDataRange().getValues();
  if (values.length < 2) return [];
  
  const headers = values[0];
  return values.slice(1).map(row => {
    let obj = {};
    headers.forEach((h, i) => {
      // Normalisasi nama header menjadi key object (lowercase, tanpa spasi)
      let key = String(h).toLowerCase().trim().replace(/\s+/g, '_').replace(/[^a-z0-9_]/g, '');
      if(!key) return; 
      let val = row[i];
      // Format tanggal agar aman dikirim ke JSON
      if (val instanceof Date) val = Utilities.formatDate(val, "GMT+7", "yyyy-MM-dd");
      obj[key] = (val === undefined || val === null) ? "" : val;
    });
    return obj;
  });
}

function saveDataGeneric(sheetName, idValue, rowArray, idIndex = 0) {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    let sheet = ss.getSheetByName(sheetName);
    if (!sheet) { setupDatabase(); sheet = ss.getSheetByName(sheetName); }
    
    const data = sheet.getDataRange().getValues();
    let rowIndex = -1;

    // Auto-Generate ID jika kosong (Kecuali tabel Users)
    if (!idValue && sheetName !== 'USERS') {
      const prefix = sheetName === 'SISWA' ? 'S' : (sheetName === 'KELAS' ? 'K' : (sheetName.includes('HARIAN') ? 'H' : 'B'));
      idValue = prefix + "-" + Date.now();
      rowArray[idIndex] = idValue;
    }

    // Cek Mode: Update (jika ID ada) atau Insert (jika ID baru)
    if (idValue) {
      for (let i = 1; i < data.length; i++) {
        if (String(data[i][idIndex]) === String(idValue)) {
          rowIndex = i + 1;
          break;
        }
      }
    }

    if (rowIndex > 0) {
      // Update Data
      sheet.getRange(rowIndex, 1, 1, rowArray.length).setValues([rowArray]);
      return { success: true, message: 'Data berhasil diperbarui.' };
    } else {
      // Insert Data Baru
      sheet.appendRow(rowArray);
      return { success: true, message: 'Data berhasil disimpan.' };
    }
  } catch (e) { return { success: false, message: "Error Save: " + e.toString() }; }
}

function deleteDataGeneric(sheetName, idValue, idIndex = 0) {
  try {
    const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName(sheetName);
    if(!sheet) return { success: false, message: "Database tidak ditemukan." };
    const data = sheet.getDataRange().getValues();
    for (let i = 1; i < data.length; i++) {
      if (String(data[i][idIndex]) === String(idValue)) {
        // Proteksi agar Admin Utama tidak terhapus
        if (sheetName === 'USERS' && String(idValue).includes('admin')) return { success: false, message: "Admin utama dilindungi." };
        sheet.deleteRow(i + 1);
        return { success: true, message: 'Data dihapus.' };
      }
    }
    return { success: false, message: 'Data tidak ditemukan.' };
  } catch (e) { return { success: false, message: e.toString() }; }
}

